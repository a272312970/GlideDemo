<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pengshan.glidedemo.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >


        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_launcher"
            />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_launcher"
            />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="5dp"
            />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_launcher"
            />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_launcher"
            />
        <com.example.pengshan.glidedemo.MyLayout
            android:id="@+id/mylayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">


        </com.example.pengshan.glidedemo.MyLayout>

        <com.example.pengshan.glidedemo.Progress.LoadingImgViewWithProgress
            android:id="@+id/loadingImgView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            />
        <com.example.pengshan.glidedemo.Progress.LoadingImgViewWithProgress
            android:id="@+id/loadingImgView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            />
        <com.example.pengshan.glidedemo.Progress.LoadingImgViewWithProgress
            android:id="@+id/loadingImgView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            />
        <com.example.pengshan.glidedemo.Progress.LoadingImgViewWithProgress
            android:id="@+id/loadingImgView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            />
        <com.example.pengshan.glidedemo.Progress.LoadingImgViewWithProgress
            android:id="@+id/loadingImgView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            />

        <com.example.pengshan.glidedemo.Progress.ProgressImageView
            android:id="@+id/loadingImgView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:text="清空SD缓存"/>


        <Button
            android:id="@+id/clear2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:text="清空内存缓存"/>
        <Button
            android:id="@+id/getCache"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:text="获取缓存地址"/>
        <ImageView
            android:id="@+id/iv_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_cache1_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缓存地址"/>

        <TextView
            android:id="@+id/tv_cache1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义缓存"/>

        <TextView
            android:id="@+id/tv_cache2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统定义缓存"/>
    </LinearLayout>
</ScrollView>

